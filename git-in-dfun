#!/bin/sh
if [ -z "$1" ]; then
    MAINCMD="git diff --name-status";
else
    MAINCMD="$1";
fi

if [ -z $2 ]; then
    SHA1=HEAD^;
    SHA2=HEAD;
else
    if [ -z "$3" ]; then
        SHA1=$2^;
        SHA2=$2;
    else
        if [ "$3" == "." ]; then
            SHA1=$2^;
            SHA2=$2;
        else
            SHA1=$2;
            SHA2=$3;
        fi
    fi;
fi;

# for p in "$@"; do
#     echo ${#p};
# done
# 保存第四位开始的参数
LESTP=${@:4:$#};
# echo "1q84 ll:$LESTP"

fcmd="$MAINCMD"" $SHA1"" $SHA2"" $LESTP";
echo "$fcmd";
